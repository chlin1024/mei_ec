{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../",
  "modulePaths": ["<rootDir>"],
  "testEnvironment": "node",
  "testMatch": ["**/test/**/*.e2e-spec*.ts"],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverage": true,
  "collectCoverageFrom": ["src/**/*.ts"],
  "coverageDirectory": "coverage",
  "testPathIgnorePatterns": ["/node_modules/", "/dist/"]
}
